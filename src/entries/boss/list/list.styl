
@import '~assets/styles/mixin.styl'

.list-header
  padding 0.8rem 1rem

  img
    height 1.2rem

  form
    width 100%

    .inner
      width 100%
      background #f5f8f9
      margin 0 1rem
      line-height 1.7rem
      border-radius 2rem
      padding 0 1rem

      input
        width 90%
        border none
        outline none
        background transparent

    button
      border none
      background none
      font-size 0.9rem
      color #5bd4c7
      flex-shrink 0

.filter
  padding 0.5rem 1rem
  border 1px solid #f5f8f9

  dl
    dt
      font-size 0.8rem

      &:after
        content ''
        display inline-block
        margin-left 0.5rem
        transition 0.3s
        triangle(4px, #ccc)
        transform-origin 2px 2px

    dd
      display none

    &.active
      color #333

      dt
        &:after
          transform rotateZ(45deg)

      dd
        display block
        background rgba(0, 0, 0, 0.3)
        width 100%
        height 100vh
        position absolute
        top 0
        left 0
        top 90px

        ul
          background #fff

          li
            line-height 3.5rem
            text-indent 1rem
            color #999

            &.active
              background #f5f8f9
              color #333

.job-list
  li
    a
      margin 1rem
      padding-bottom 1rem
      color #7e8793
      border-bottom-1px(#ccc)

      img
        height 3.5rem
        border-radius 0.2rem

      .text
        width 100%
        margin-left 1rem

        h4
          color #333
          font-size 0.9rem

          .salary
            font-size 1.2rem
            color #fc6c38

        .company
          color #333
          font-size 0.8rem
          margin 0.2rem 0

        .props
          font-size 0.8rem

          span
            margin-right 0.5rem
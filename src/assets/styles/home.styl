@import './mixin.styl'

body
  display flex
  justify-content center
  align-items center
  min-height 100vh
  background-color #866ec7
  font-family 'Poppins', sans-serif

  .box
    position relative
    width 300px
    height 400px
    display flex
    justify-content center
    align-items center
    background-color #866ec7

    &:before
      content ''
      position absolute
      top -2px
      left -2px
      right -2px
      bottom -2px
      background-color #fff
      z-index -1

    &:after
      content ''
      position absolute
      top -2px
      left -2px
      right -2px
      bottom -2px
      background-color #fff
      z-index -2
      filter blur(40px)

    &:before, &:after
      background linear-gradient(235deg, #89ff00, #866ec7, #00bcd4)

    .content
      padding 20px
      box-sizing border-box
      color #fff

      h1
        text-align center
border-bottom-1px($color)
  position relative

  &:after
    display block
    position absolute
    left 0
    bottom 0
    border-bottom 1px solid $color
    width 100%
    content ''
    transform-origin 0 0
    transform scaleY(0.5)

border-top-1px($color)
  position relative

  &:before
    display block
    position absolute
    left 0
    top 0
    border-bottom 1px solid $color
    width 100%
    content ''
    transform-origin 0 0
    transform scaleY(0.5)

triangle($px, $color)
  width $px
  height $px
  border-color $color
  border-style solid none none solid
  transform rotateZ(225deg)

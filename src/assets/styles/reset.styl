*
  box-sizing border-box
  -webkit-text-size-adjust 100%
  -webkit-tap-highlight-color transparent
  -webkit-font-smoothing antialiased
  margin 0
  padding 0
  outline none

html, body
  width 100%
  height 100%

.page
  width 100%
  height 100%
  position fixed
  left 0
  top 0
  z-index 20
  background-color orange

ul, li, ol, dl, dd
  list-style none

h1, h2, h3, h4, p
  font-weight normal

.clearfix
  &:after
    content ''
    display block
    visibility hidden
    width 0
    height 0
    zoom 1
    clear both

a
  text-decoration none
  color inherit

button
  cursor pointer
  border none

img
  max-width 100%

.dxy-article-container
  text-align left
  max-width 1000px
  margin 0 auto

.flex
  display flex
  justify-content space-between
  align-items center

.padded
  padding 1rem

.grey
  color #9fa3b0

.btn
  font-size 0.9rem
  padding 0.5rem 1.2rem
  border-radius 2rem